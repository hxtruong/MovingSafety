<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/helperAvatar"
        android:layout_width="67dp"
        android:layout_height="66dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/helperName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/helperAvatar"
        app:layout_constraintTop_toTopOf="@+id/helperAvatar" />

    <TextView
        android:id="@+id/helperDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/helperName"
        app:layout_constraintTop_toBottomOf="@+id/helperName" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="53dp"
        android:layout_height="36dp"
        android:layout_marginStart="112dp"
        app:layout_constraintBottom_toBottomOf="@+id/helperAvatar"
        app:layout_constraintStart_toEndOf="@+id/helperAvatar"
        app:layout_constraintTop_toTopOf="@+id/helperAvatar"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:drawable/sym_action_call"
        android:onClick="clickCallHelper"/>
</android.support.constraint.ConstraintLayout>